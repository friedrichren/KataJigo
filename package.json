{
  "name": "katajigo",
  "version": "1.0.0",
  "description": "",
  "bin": "src/main.js",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier \"./src/**/*.js\" \"./**/*.md\" --write",
    "format-watch": "onchange \"./src/**/*.js\" \"./**/*.md\" -- prettier --write {{changed}}",
    "build": "pkg . --targets node12 --out-path ./bin",
    "build:all": "pkg . --targets node12-windows-x64,node12-linux-x64,node12-macos-x64 --out-path ./bin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yishn/KataJigo.git"
  },
  "author": "Yichuan Shen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yishn/KataJigo/issues"
  },
  "homepage": "https://github.com/yishn/KataJigo#readme",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "proseWrap": "always"
  },
  "dependencies": {
    "@sabaki/gtp": "^2.3.1"
  },
  "devDependencies": {
    "onchange": "^6.1.0",
    "pkg": "^4.4.4",
    "prettier": "1.19.1"
  }
}
